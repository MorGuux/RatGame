<BorderPane prefHeight="600.0" prefWidth="800.0" styleClass="BackgroundPane" stylesheets="@../assets/css/dark_theme.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.leaderboard.LeaderboardController">
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
   <center>
      <StackPane BorderPane.alignment="CENTER">
         <children>
            <Pane fx:id="backgroundPane">
               <styleClass>
                  <String fx:value="ContentModule" />
                  <String fx:value="DefaultBorder" />
               </styleClass>
               <StackPane.margin>
                  <Insets />
               </StackPane.margin>
            </Pane>
            <VBox fx:id="leaderboardVBox" alignment="CENTER" prefHeight="200.0" prefWidth="100.0">
               <children>
                  <ComboBox fx:id="leaderboardLevelsComboBox" layoutX="311.0" layoutY="14.0" onAction="#leaderboardLevelSelected" prefHeight="32.0" prefWidth="210.0" promptText="Select Level">
                     <VBox.margin>
                        <Insets bottom="20.0" />
                     </VBox.margin>
                     <styleClass>
                        <String fx:value="DefaultText" />
                        <String fx:value="ContentModule" />
                        <String fx:value="DefaultBorder" />
                        <String fx:value="AltFontB" />
                        <String fx:value="HoverEffect" />
                        <String fx:value="ClickEffect" />
                     </styleClass></ComboBox>
               </children>
               <padding>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </padding>
               <StackPane.margin>
                  <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
               </StackPane.margin>
            </VBox>
         </children>
         <BorderPane.margin>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </BorderPane.margin>
      </StackPane>
   </center>
   <top>
      <BorderPane BorderPane.alignment="CENTER">
         <center>
            <Label text="CS-230 G29 :: RatGame" BorderPane.alignment="CENTER">
               <BorderPane.margin>
                  <Insets bottom="4.0" left="4.0" right="4.0" top="4.0" />
               </BorderPane.margin>
               <styleClass>
                  <String fx:value="TitleText" />
                  <String fx:value="AltFontA" />
               </styleClass>
            </Label>
         </center>
         <BorderPane.margin>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </BorderPane.margin>
         <styleClass>
            <String fx:value="ContentModule" />
            <String fx:value="DefaultBorder" />
         </styleClass>
      </BorderPane>
   </top>
   <bottom>
      <BorderPane BorderPane.alignment="CENTER">
         <center>
            <Label fx:id="motdLabel" text="Message of the day..." BorderPane.alignment="CENTER">
               <BorderPane.margin>
                  <Insets bottom="6.0" left="6.0" right="6.0" top="6.0" />
               </BorderPane.margin>
               <styleClass>
                  <String fx:value="HeaderText" />
                  <String fx:value="AltFontB" />
               </styleClass>
            </Label>
         </center>
         <BorderPane.margin>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </BorderPane.margin>
         <styleClass>
            <String fx:value="ContentModule" />
            <String fx:value="DefaultBorder" />
         </styleClass>
      </BorderPane>
   </bottom>
