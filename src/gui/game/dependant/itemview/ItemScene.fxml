<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane fx:id="mainPane" maxHeight="70.0" prefHeight="70.0" stylesheets="@../../../assets/css/dark_theme.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.game.dependant.itemview.ItemViewController">
   <center>
      <BorderPane maxHeight="68.0" nodeOrientation="LEFT_TO_RIGHT" BorderPane.alignment="CENTER">
         <top>
            <Label fx:id="usageCountLabel" text="5/10" BorderPane.alignment="CENTER">
               <styleClass>
                  <String fx:value="AltFontA" />
                  <String fx:value="HeaderText" />
               </styleClass>
            </Label>
         </top>
         <center>
            <ScrollPane fitToHeight="true" fitToWidth="true" hbarPolicy="NEVER" maxWidth="150.0" pannable="true" prefHeight="32.0" styleClass="DefaultScrollPane" vbarPolicy="NEVER" BorderPane.alignment="CENTER">
               <content>
                  <HBox fx:id="subItemView" alignment="CENTER_LEFT" spacing="5.0" styleClass="BackgroundPane" />
               </content>
               <cursor>
                  <Cursor fx:constant="MOVE" />
               </cursor>
            </ScrollPane>
         </center>
         <left>
            <ImageView fx:id="mainItemImageView" fitHeight="32.0" fitWidth="32.0" pickOnBounds="true" smooth="false" BorderPane.alignment="CENTER">
               <image>
                  <Image url="@../../../assets/item_placeholder.jpg" />
               </image>
               <BorderPane.margin>
                  <Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
               </BorderPane.margin>
            </ImageView>
         </left>
         <BorderPane.margin>
            <Insets bottom="4.0" left="4.0" right="4.0" top="4.0" />
         </BorderPane.margin>
         <cursor>
            <Cursor fx:constant="OPEN_HAND" />
         </cursor>
      </BorderPane>
   </center>
   <styleClass>
      <String fx:value="BackgroundPane" />
      <String fx:value="DefaultBorder" />
   </styleClass>
</BorderPane>
