<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<ScrollPane fitToHeight="true" fitToWidth="true" hbarPolicy="NEVER" pannable="true" styleClass="DefaultScrollPane" stylesheets="@../../../../assets/css/dark_theme.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.editor.module.tab.properties.PropertiesTab">
   <content>
      <BorderPane styleClass="ContentModule">
         <center>
            <VBox alignment="CENTER" spacing="15.0" BorderPane.alignment="CENTER">
               <children>
                  <TextField id="level-name" fx:id="levelNameTextField" alignment="CENTER" layoutX="20.0" layoutY="146.0" promptText="Level Name..." VBox.vgrow="ALWAYS">
                     <font>
                        <Font size="13.0" />
                     </font>
                     <styleClass>
                        <String fx:value="AltFontA" />
                        <String fx:value="DefaultText" />
                     </styleClass>
                  </TextField>
                  <TextField id="num-rows" fx:id="numRowsTextField" alignment="CENTER" promptText="Rows..." VBox.vgrow="ALWAYS">
                     <font>
                        <Font size="13.0" />
                     </font>
                     <styleClass>
                        <String fx:value="AltFontA" />
                        <String fx:value="DefaultText" />
                     </styleClass>
                  </TextField>
                  <TextField id="num-columns" fx:id="numColumnsTextField" alignment="CENTER" promptText="Columns..." VBox.vgrow="ALWAYS">
                     <font>
                        <Font size="13.0" />
                     </font>
                     <styleClass>
                        <String fx:value="AltFontA" />
                        <String fx:value="DefaultText" />
                     </styleClass>
                  </TextField>
                  <TextField id="max-rats" fx:id="maxRatsTextField" alignment="CENTER" layoutX="20.0" layoutY="62.0" promptText="Max Rats..." VBox.vgrow="ALWAYS">
                     <font>
                        <Font size="13.0" />
                     </font>
                     <styleClass>
                        <String fx:value="AltFontA" />
                        <String fx:value="DefaultText" />
                     </styleClass>
                  </TextField>
                  <TextField id="time-limit" fx:id="timeLimitMsTextField" alignment="CENTER" layoutX="20.0" layoutY="104.0" promptText="Time Limit (MS)..." VBox.vgrow="ALWAYS">
                     <font>
                        <Font size="13.0" />
                     </font>
                     <styleClass>
                        <String fx:value="AltFontA" />
                        <String fx:value="DefaultText" />
                     </styleClass>
                  </TextField>
                  <Button mnemonicParsing="false" onAction="#resetToDefaults" text="Reset to Defaults" VBox.vgrow="ALWAYS">
                     <font>
                        <Font size="13.0" />
                     </font>
                     <styleClass>
                        <String fx:value="BackgroundPane" />
                        <String fx:value="ClickEffect" />
                        <String fx:value="DefaultText" />
                        <String fx:value="AltFontB" />
                     </styleClass>
                  </Button>
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </VBox>
         </center>
      </BorderPane>
   </content>
</ScrollPane>
