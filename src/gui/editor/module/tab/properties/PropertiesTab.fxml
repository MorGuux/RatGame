<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<ScrollPane fitToWidth="true" hbarPolicy="NEVER" pannable="true" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.editor.module.tab.properties.PropertiesTab">
   <content>
      <BorderPane>
         <center>
            <VBox alignment="CENTER" spacing="15.0" BorderPane.alignment="CENTER">
               <children>
                  <TextField id="level-name" fx:id="levelNameTextField" alignment="CENTER" layoutX="20.0" layoutY="146.0" promptText="Level Name...">
                     <font>
                        <Font size="13.0" />
                     </font>
                  </TextField>
                  <TextField id="num-rows" fx:id="numRowsTextField" alignment="CENTER" promptText="Rows...">
                     <font>
                        <Font size="13.0" />
                     </font>
                  </TextField>
                  <TextField id="num-columns" fx:id="numColumnsTextField" alignment="CENTER" promptText="Columns...">
                     <font>
                        <Font size="13.0" />
                     </font>
                  </TextField>
                  <TextField id="max-rats" fx:id="maxRatsTextField" alignment="CENTER" layoutX="20.0" layoutY="62.0" promptText="Max Rats...">
                     <font>
                        <Font size="13.0" />
                     </font>
                  </TextField>
                  <TextField id="time-limit" fx:id="timeLimitMsTextField" alignment="CENTER" layoutX="20.0" layoutY="104.0" promptText="Time Limit (MS)...">
                     <font>
                        <Font size="13.0" />
                     </font>
                  </TextField>
                  <Button mnemonicParsing="false" onAction="#resetToDefaults" text="Reset to Defaults">
                     <font>
                        <Font size="13.0" />
                     </font>
                  </Button>
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </VBox>
         </center>
      </BorderPane>
   </content>
</ScrollPane>
