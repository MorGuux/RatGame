<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>


<BorderPane styleClass="TransparentNode" stylesheets="@../../../../../../assets/css/dark_theme.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.editor.module.tab.entities.view.existing.ExistingEntityView">
   <center>
      <BorderPane styleClass="ContentModule" BorderPane.alignment="CENTER">
         <left>
            <ImageView fx:id="entityDisplaySprite" fitHeight="38.0" fitWidth="38.0" pickOnBounds="true" smooth="false" BorderPane.alignment="CENTER">
               <BorderPane.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" />
               </BorderPane.margin>
               <styleClass>
                  <String fx:value="AltHover" />
                  <String fx:value="ClickEffect" />
               </styleClass>
            </ImageView>
         </left>
         <top>
            <Label fx:id="entityNameLabel" text="Entity Name" wrapText="true" BorderPane.alignment="CENTER">
               <BorderPane.margin>
                  <Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
               </BorderPane.margin>
               <font>
                  <Font name="System Bold" size="13.0" />
               </font>
               <styleClass>
                  <String fx:value="AltFontB" />
                  <String fx:value="DefaultText" />
               </styleClass>
            </Label>
         </top>
         <center>
            <BorderPane BorderPane.alignment="CENTER">
               <bottom>
                  <HBox alignment="CENTER" spacing="6.0" BorderPane.alignment="CENTER">
                     <BorderPane.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </BorderPane.margin>
                     <children>
                        <Button mnemonicParsing="false" onAction="#onEditClicked" text="Edit" HBox.hgrow="ALWAYS">
                           <HBox.margin>
                              <Insets />
                           </HBox.margin>
                           <styleClass>
                              <String fx:value="AltFontA" />
                              <String fx:value="BackgroundPane" />
                              <String fx:value="ClickEffect" />
                              <String fx:value="DefaultText" />
                           </styleClass>
                           <font>
                              <Font size="11.0" />
                           </font>
                        </Button>
                        <Button layoutX="10.0" layoutY="10.0" mnemonicParsing="false" onAction="#onDeleteClicked" text="Delete" HBox.hgrow="ALWAYS">
                           <HBox.margin>
                              <Insets />
                           </HBox.margin>
                           <styleClass>
                              <String fx:value="AltFontA" />
                              <String fx:value="BackgroundPane" />
                              <String fx:value="ClickEffect" />
                              <String fx:value="DefaultText" />
                           </styleClass>
                           <font>
                              <Font size="11.0" />
                           </font>
                        </Button>
                     </children>
                  </HBox>
               </bottom>
               <center>
                  <Label fx:id="rowColLabel" text="(Row, Col)" wrapText="true" BorderPane.alignment="CENTER">
                     <font>
                        <Font size="13.0" />
                     </font>
                     <BorderPane.margin>
                        <Insets />
                     </BorderPane.margin>
                     <styleClass>
                        <String fx:value="AltFontB" />
                        <String fx:value="DefaultText" />
                     </styleClass>
                  </Label>
               </center>
               <BorderPane.margin>
                  <Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
               </BorderPane.margin>
            </BorderPane>
         </center>
         <BorderPane.margin>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </BorderPane.margin>
      </BorderPane>
   </center>
</BorderPane>
