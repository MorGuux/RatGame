<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane stylesheets="@../../../../assets/css/dark_theme.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.editor.module.tab.items.ItemViewTab">
   <center>
      <ScrollPane fitToHeight="true" fitToWidth="true" hbarPolicy="NEVER" pannable="true" vbarPolicy="NEVER" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
         </BorderPane.margin>
         <styleClass>
            <String fx:value="DefaultScrollPane" />
            <String fx:value="Rounded" />
            <String fx:value="DefaultBorder" />
         </styleClass>
         <padding>
            <Insets bottom="4.0" left="4.0" right="4.0" top="4.0" />
         </padding>
         <content>
            <BorderPane>
               <center>
                  <VBox fx:id="contentContainerVBox" alignment="CENTER" spacing="10.0" BorderPane.alignment="CENTER" />
               </center>
            </BorderPane>
         </content>
      </ScrollPane>
   </center>
   <bottom>
      <Button mnemonicParsing="false" onAction="#onCreateNewClicked" text="Create New" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets bottom="4.0" left="4.0" right="4.0" top="4.0" />
         </BorderPane.margin>
         <styleClass>
            <String fx:value="AltFontB" />
            <String fx:value="ContentModule" />
            <String fx:value="DefaultText" />
            <String fx:value="ClickEffect" />
         </styleClass>
      </Button>
   </bottom>
   <styleClass>
      <String fx:value="AltFontB" />
      <String fx:value="BackgroundPane" />
      <String fx:value="DefaultBorder" />
   </styleClass>
</BorderPane>
