<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane styleClass="TransparentNode" stylesheets="@../../../../assets/css/dark_theme.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.editor.module.tile.single.SingleTileView">
   <center>
      <BorderPane styleClass="ContentModule" BorderPane.alignment="CENTER">
         <center>
            <ImageView fx:id="displaySpriteImageResource" fitHeight="38.0" fitWidth="38.0" onDragDetected="#onDragDetected" pickOnBounds="true" smooth="false" BorderPane.alignment="CENTER">
               <BorderPane.margin>
                  <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
               </BorderPane.margin>
               <styleClass>
                  <String fx:value="ClickEffect" />
                  <String fx:value="DefaultBorder" />
                  <String fx:value="AltHover" />
               </styleClass>
            </ImageView>
         </center>
         <BorderPane.margin>
            <Insets bottom="4.0" left="4.0" right="4.0" top="4.0" />
         </BorderPane.margin>
         <left>
            <Button mnemonicParsing="false" onAction="#onPreviousDisplaySprite" text="&lt;" BorderPane.alignment="CENTER">
               <styleClass>
                  <String fx:value="AltFontB" />
                  <String fx:value="DefaultText" />
                  <String fx:value="BackgroundPane" />
                  <String fx:value="ClickEffect" />
               </styleClass>
               <BorderPane.margin>
                  <Insets left="3.0" right="3.0" />
               </BorderPane.margin>
            </Button>
         </left>
         <right>
            <Button mnemonicParsing="false" onAction="#onNextDisplaySprite" text="&gt;" BorderPane.alignment="CENTER">
               <styleClass>
                  <String fx:value="AltFontB" />
                  <String fx:value="DefaultText" />
                  <String fx:value="BackgroundPane" />
                  <String fx:value="ClickEffect" />
               </styleClass>
               <BorderPane.margin>
                  <Insets left="3.0" right="3.0" />
               </BorderPane.margin>
            </Button>
         </right>
      </BorderPane>
   </center>
</BorderPane>
