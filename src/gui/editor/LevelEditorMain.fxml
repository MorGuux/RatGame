<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.editor.LevelEditor">
   <center>
      <SplitPane dividerPositions="0.7" prefHeight="600.0" prefWidth="800.0" BorderPane.alignment="CENTER">
         <items>
            <BorderPane>
               <top>
                  <HBox fx:id="tilesHBox" alignment="CENTER" maxHeight="50.0" prefHeight="50.0" BorderPane.alignment="CENTER">
                     <BorderPane.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </BorderPane.margin>
                  </HBox>
               </top>
               <center>
                  <ScrollPane onDragDropped="#onDragDropped" onDragEntered="#onDragEntered" onDragOver="#onDragOver" pannable="true" BorderPane.alignment="CENTER">
                     <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </padding>
                     <BorderPane.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </BorderPane.margin>
                     <content>
                        <StackPane fx:id="gameObjectEditorViewStackPane" />
                     </content>
                  </ScrollPane>
               </center>
            </BorderPane>
            <TabPane prefWidth="200.0" tabClosingPolicy="UNAVAILABLE">
               <tabs>
                  <Tab closable="false" text="General">
                     <content>
                        <BorderPane fx:id="generalTabBorderpane" />
                     </content>
                  </Tab>
                  <Tab closable="false" text="Entities">
                     <content>
                        <BorderPane fx:id="entitiesTabBorderpane" />
                     </content>
                  </Tab>
                  <Tab closable="false" text="Item Pool">
                     <content>
                        <BorderPane fx:id="itemPoolTabBorderpane" />
                     </content>
                  </Tab>
               </tabs>
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
            </TabPane>
         </items>
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
      </SplitPane>
   </center>
   <bottom>
      <HBox alignment="CENTER_RIGHT" BorderPane.alignment="CENTER_RIGHT">
         <BorderPane.margin>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </BorderPane.margin>
         <children>
            <Button mnemonicParsing="false" onAction="#onSaveAndQuit" text="Save &amp; Exit">
               <HBox.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </HBox.margin>
               <font>
                  <Font size="13.0" />
               </font>
            </Button>
         </children>
      </HBox>
   </bottom>
</BorderPane>
