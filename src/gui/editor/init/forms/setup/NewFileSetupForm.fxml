<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="260.0" prefWidth="380.0" stylesheets="@../../../../assets/css/dark_theme.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.editor.init.forms.setup.NewFileSetupForm">
   <center>
      <VBox alignment="CENTER" spacing="10.0" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
         </BorderPane.margin>
         <children>
            <TextField fx:id="friendlyNameField" promptText="Friendly Name...">
               <VBox.margin>
                  <Insets />
               </VBox.margin>
               <styleClass>
                  <String fx:value="AltFontB" />
                  <String fx:value="DefaultText" />
                  <String fx:value="ContentModule" />
               </styleClass>
            </TextField>
            <TextField fx:id="rowCountField" layoutX="45.0" layoutY="118.0" promptText="Row Count...">
               <styleClass>
                  <String fx:value="AltFontB" />
                  <String fx:value="DefaultText" />
                  <String fx:value="ContentModule" />
               </styleClass></TextField>
            <TextField fx:id="columnCountField" layoutX="10.0" layoutY="75.0" promptText="Column Count...">
               <styleClass>
                  <String fx:value="AltFontB" />
                  <String fx:value="DefaultText" />
                  <String fx:value="ContentModule" />
               </styleClass></TextField>
            <TextField fx:id="maxRatsField" layoutX="10.0" layoutY="10.0" promptText="Max Rats...">
               <styleClass>
                  <String fx:value="AltFontB" />
                  <String fx:value="DefaultText" />
                  <String fx:value="ContentModule" />
               </styleClass></TextField>
            <TextField fx:id="timeLimitMsField" layoutX="10.0" layoutY="93.0" promptText="Time Limit (MS)">
               <styleClass>
                  <String fx:value="AltFontB" />
                  <String fx:value="DefaultText" />
                  <String fx:value="ContentModule" />
               </styleClass></TextField>
         </children>
      </VBox>
   </center>
   <top>
      <Label text="New File Setup Form" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </BorderPane.margin>
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
         <styleClass>
            <String fx:value="HeaderText" />
            <String fx:value="AltFontB" />
         </styleClass>
      </Label>
   </top>
   <bottom>
      <HBox alignment="CENTER_RIGHT" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </BorderPane.margin>
         <children>
            <Button mnemonicParsing="false" onAction="#onContinueClicked" text="Continue">
               <styleClass>
                  <String fx:value="ContentModule" />
                  <String fx:value="DefaultText" />
                  <String fx:value="ClickEffect" />
                  <String fx:value="HoverEffect" />
               </styleClass></Button>
         </children>
      </HBox>
   </bottom>
   <styleClass>
      <String fx:value="AltFontB" />
      <String fx:value="DefaultText" />
      <String fx:value="BackgroundPane" />
   </styleClass>
</BorderPane>
