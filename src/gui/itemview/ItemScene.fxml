<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="mainPane" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.itemview.ItemViewController">
   <left>
      <ImageView fx:id="itemImage" fitHeight="32.0" fitWidth="32.0" pickOnBounds="true" smooth="false" BorderPane.alignment="CENTER_LEFT">
         <image>
            <Image url="@../assets/item_placeholder.jpg" />
         </image>
         <BorderPane.margin>
            <Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
         </BorderPane.margin>
      </ImageView>
   </left>
   <center>
      <Label fx:id="usagesLabel" styleClass="DefaultText" text="Usages:  9" textFill="WHITE" BorderPane.alignment="CENTER">
         <font>
            <Font size="16.0" />
         </font>
      </Label>
   </center>
   <padding>
      <Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
   </padding>
   <styleClass>
      <String fx:value="ContentModule" />
      <String fx:value="DefaultBorder" />
      <String fx:value="Rounded" />
      <String fx:value="DefaultText" />
   </styleClass>
</BorderPane>
